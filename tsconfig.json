{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"emitDeclarationOnly": true,
		"target": "ES6",
		"module": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"sourceMap": true,
		"allowJs": false,
	},
	"include": [
		"src/index.tsx",
		"types/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}