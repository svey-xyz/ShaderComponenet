{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationDir": "dist",
		"emitDeclarationOnly": false,
		"target": "ES6",
		"module": "esnext",
		"moduleResolution": "Bundler",
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"sourceMap": true,
		"allowJs": false,
	},
	"include": [
		"src/core/index.tsx",
		"src/react/index.tsx",
		"src/types/index.d.ts",
		"__tests__/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist",
		"__tests__"
	],
	"types": [
		"node",
		"jest",
		"@testing-library/jest-dom",
		"@testing-library/jest-dom/jest-globals"
	],
	"paths": {
		"@/src/*": ["./src/*"],
		"simple-shader/core": [
			"src/core/index.ts"
		],
		"simple-shader/react": [
			"src/react/index.ts"
		],
		// "simple-shader/vue": [
		// 	"src/vue/index.ts"
		// ]
	}
}